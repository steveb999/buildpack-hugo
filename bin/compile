#!/bin/sh
set -e

# Used to format the output based on heroku guidelines
# https://devcenter.heroku.com/articles/buildpack-api#style
indent() {
  RE="s/^/       /"
  sed $SED_FLAG "$RE"
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

# Installing Linuxbrew
echo "\n-----> Installing Homebrew"

sh -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)" | indent

test -d ~/.linuxbrew && eval $(~/.linuxbrew/bin/brew shellenv)
test -d /home/linuxbrew/.linuxbrew && eval $(/home/linuxbrew/.linuxbrew/bin/brew shellenv)
test -r ~/.bash_profile && echo "eval \$($(brew --prefix)/bin/brew shellenv)" >>~/.bash_profile
echo "eval \$($(brew --prefix)/bin/brew shellenv)" >>~/.profile

# Installing Hugo
echo "\n-----> Installing Hugo"
brew install hugo | indent

# Build the site
echo "\n-----> Building the site"
cd $BUILD_DIR
mkdir -p public | indent
hugo -D | indent
